<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Créer un Quiz - QuIsen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background:#f8f9fa; }
    .q-card { border-radius: .75rem; }
    .choice-row .form-check-input { margin-top:.55rem; }
    .sticky-actions { position:sticky; bottom:0; background:#fff; padding:1rem; border-top:1px solid #eee; }
    .badge-hint { font-weight:500; }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Qu<span class="text-danger">Isen</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Accueil</a></li>
          <li class="nav-item"><a class="nav-link" href="/lesquiz">Les quiz</a></li>
          <li class="nav-item"><a class="nav-link" href="/mesquiz">Mes quiz</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenu -->
  <div class="container py-4 py-md-5">
    <div class="row justify-content-center">
      <div class="col-lg-9 col-xl-8">

        <div class="mb-4">
          <h1 class="h3 mb-1">Créer un nouveau quiz</h1>
          <p class="text-muted mb-0">Ajoute des questions, définis les bonnes réponses, puis publie.</p>
        </div>

        <!-- Formulaire -->
        <form id="quizForm" class="card border-0 shadow-sm">
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-7">
                <label class="form-label">Titre</label>
                <input id="title" class="form-control" placeholder="Ex: Culture générale" required>
              </div>
              <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea id="description" class="form-control" rows="2" placeholder="Quelques mots sur le quiz..."></textarea>
              </div>
            </div>

            <hr class="my-4">

            <div class="d-flex align-items-center justify-content-between mb-2">
              <h2 class="h5 mb-0">Questions</h2>
              <span class="badge text-bg-light badge-hint">Chaque question doit avoir ≥ 2 choix et ≥ 1 bonne réponse</span>
            </div>

            <div id="questions" class="d-grid gap-3"></div>

            <div class="mt-3">
              <button type="button" id="addQuestion" class="btn btn-outline-primary">
                + Ajouter une question
              </button>
            </div>
          </div>

          <div class="sticky-actions d-flex gap-2 justify-content-end">
            <a href="/lesquiz" class="btn btn-outline-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary" id="submitBtn">Créer le quiz</button>
          </div>
        </form>

        <!-- Zone messages -->
        <div id="msg" class="alert d-none mt-3" role="alert"></div>

      </div>
    </div>
  </div>

  <script>
    const questionsEl = document.getElementById('questions');
    const addQuestionBtn = document.getElementById('addQuestion');
    const form = document.getElementById('quizForm');
    const msg = document.getElementById('msg');

    addQuestionBtn.addEventListener('click', addQuestion);
    // Au moins 1 question au départ
    addQuestion();

    function addQuestion() {
      const qDiv = document.createElement('div');
      qDiv.className = 'card q-card border-0 shadow-sm';
      qDiv.innerHTML = `
        <div class="card-body">
          <div class="d-flex align-items-start justify-content-between">
            <div class="flex-grow-1 me-3">
              <label class="form-label fw-semibold">Question</label>
              <input class="form-control q-text" placeholder="Intitulé de la question" required>
            </div>
            <div class="form-check form-switch mt-4">
              <input class="form-check-input q-multi" type="checkbox" id="multi-${Date.now()}">
              <label class="form-check-label" for="multi-${Date.now()}">Plusieurs bonnes réponses</label>
            </div>
          </div>

          <div class="mt-3 choices"></div>

          <div class="d-flex gap-2 mt-3">
            <button type="button" class="btn btn-sm btn-outline-primary addChoice">+ Ajouter un choix</button>
            <button type="button" class="btn btn-sm btn-outline-danger removeQuestion">Supprimer la question</button>
          </div>
        </div>
      `;
      questionsEl.appendChild(qDiv);

      const choicesEl = qDiv.querySelector('.choices');
      const addChoiceBtn = qDiv.querySelector('.addChoice');
      const removeQuestionBtn = qDiv.querySelector('.removeQuestion');

      addChoiceBtn.addEventListener('click', () => addChoice(choicesEl));
      removeQuestionBtn.addEventListener('click', () => qDiv.remove());

      // 2 choix par défaut
      addChoice(choicesEl); addChoice(choicesEl);
    }

    function addChoice(container) {
      const row = document.createElement('div');
      row.className = 'row g-2 align-items-start choice-row mb-2';
      row.innerHTML = `
        <div class="col-auto">
          <div class="form-check">
            <input class="form-check-input is-correct" type="checkbox" title="Bonne réponse ?">
          </div>
        </div>
        <div class="col">
          <input type="text" class="form-control choice-text" placeholder="Réponse..." required>
        </div>
        <div class="col-auto">
          <button class="btn btn-outline-danger btn-sm removeChoice" type="button" title="Supprimer">×</button>
        </div>
      `;
      row.querySelector('.removeChoice').onclick = () => row.remove();
      container.appendChild(row);
    }

    function showMsg(type, text) {
      msg.className = 'alert mt-3 alert-' + type;
      msg.textContent = text;
      msg.classList.remove('d-none');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const token = localStorage.getItem('token');
      if (!token) return showMsg('warning', 'Vous devez être connecté pour créer un quiz.');

      const title = document.getElementById('title').value.trim();
      const description = document.getElementById('description').value.trim();

      const questions = Array.from(questionsEl.children).map(card => {
        const text = card.querySelector('.q-text').value.trim();
        const allowMultiple = card.querySelector('.q-multi').checked;
        const choices = Array.from(card.querySelectorAll('.choices .choice-row')).map(row => ({
          text: row.querySelector('.choice-text').value.trim(),
          isCorrect: row.querySelector('.is-correct').checked
        }));
        return { text, allowMultiple, choices };
      });

      // validations UI rapides
      if (!title) return showMsg('warning', 'Le titre est requis.');
      if (questions.length === 0) return showMsg('warning', 'Ajoutez au moins une question.');
      for (const [i, q] of questions.entries()) {
        if (!q.text) return showMsg('warning', `La question ${i+1} est vide.`);
        if (!Array.isArray(q.choices) || q.choices.length < 2)
          return showMsg('warning', `La question ${i+1} doit avoir au moins 2 choix.`);
        if (!q.choices.some(c => c.isCorrect))
          return showMsg('warning', `La question ${i+1} doit avoir au moins une bonne réponse.`);
      }

      // envoi
      try {
        document.getElementById('submitBtn').disabled = true;
        const res = await fetch('/api/quizzes', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ title, description, questions })
        });

        const data = await res.json();
        if (!res.ok) {
          document.getElementById('submitBtn').disabled = false;
          return showMsg('danger', data.error || 'Erreur lors de la création du quiz.');
        }

        showMsg('success', 'Quiz créé avec succès.');
        setTimeout(() => { window.location.href = '/mesquiz'; }, 800);
      } catch (err) {
        console.error(err);
        document.getElementById('submitBtn').disabled = false;
        showMsg('danger', 'Erreur réseau/serveur.');
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>