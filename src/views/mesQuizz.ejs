<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mes Quizz - QuIsen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Qu<span class="text-danger">Isen</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center" id="navLinks">
          <li class="nav-item"><a class="nav-link" href="/">Accueil</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">S'inscrire</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Connexion</a></li>
          
          <!-- Pseudo utilisateur -->
          <li class="nav-item" id="userItem" style="display:none;">
            <span class="nav-link text-warning" id="pseudo"></span>
          </li>

          <!-- Bouton Mes Quizz -->
          <li class="nav-item ms-2" id="mesQuizzBtn" style="display:none;">
            <a class="btn btn-start fw-bold" href="/mesquizz">Mes quizz</a>
          </li>

          <!-- Bouton Panel Admin uniquement si admin -->
          <li class="nav-item ms-2" id="adminBtn" style="display:none;">
            <a class="btn btn-warning fw-bold" href="/users">Panel Admin</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenu principal -->
  <div class="container mt-5 pt-5 text-center">
    <h1 class="mb-5">Bienvenue sur l'espace concernant les QUIZZ !</h1>
    <div class="d-flex justify-content-center gap-4">
      <a href="/lesquizz" class="btn btn-primary btn-lg">Voir les quizz</a>
      <a href="/creerquizz" class="btn btn-success btn-lg">Cr√©er un quizz</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Affichage du pseudo et boutons conditionnels
    const token = localStorage.getItem('token');
    if(token){
      const payload = JSON.parse(atob(token.split('.')[1]));
      const pseudo = payload.name || localStorage.getItem('name') || 'Utilisateur';
      document.getElementById('pseudo').textContent = pseudo;
      document.getElementById('userItem').style.display = 'block';
      document.getElementById('mesQuizzBtn').style.display = 'block';
      if(payload.role === 'admin'){
        document.getElementById('adminBtn').style.display = 'block';
      }
    }
  </script>
</body>
</html>
