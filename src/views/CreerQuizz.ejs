<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Créer un Quizz - QuIsen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Qu<span class="text-danger">Isen</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link" href="/">Accueil</a></li>
          <li class="nav-item"><a class="nav-link" href="/mesquizz">Mes Quizz</a></li>
          <li class="nav-item"><a class="nav-link" href="/users">Utilisateurs</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5 pt-5">
    <h2 class="mb-4 text-center">Créer un nouveau quizz</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
      <div class="card-body">
        <form id="createQuizForm">
          <div class="mb-3">
            <label for="title" class="form-label">Titre du quizz</label>
            <input type="text" class="form-control" id="title" placeholder="Ex: Culture générale" required>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" placeholder="Quelques mots sur ce quizz..." required></textarea>
          </div>

          <button type="submit" class="btn btn-primary w-100">Créer le quizz</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('createQuizForm');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const title = document.getElementById('title').value;
      const description = document.getElementById('description').value;
      const token = localStorage.getItem('token');

      if (!token) {
        alert('Veuillez vous connecter pour créer un quizz.');
        window.location.href = '/login';
        return;
      }

      try {
        const res = await fetch('/api/quizzes', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ title, description })
        });

        const data = await res.json();
        if (!res.ok) {
          alert(data.error || 'Erreur lors de la création du quizz');
          return;
        }

        alert('Quizz créé avec succès !');
        form.reset();
        // Optionnel : rediriger vers la liste des quizz
        window.location.href = '/lesquizz';

      } catch (err) {
        console.error(err);
        alert('Erreur serveur');
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
