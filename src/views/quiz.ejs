<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= quiz.title %> - QuIsen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .correct { color: #198754; font-weight: bold; margin-left: 5px; } /* vert */
    .incorrect { color: #dc3545; font-weight: bold; margin-left: 5px; } /* rouge */
    .good-answer { 
      background-color: #d1e7dd; 
      border-radius: 5px; 
      padding: 3px 6px; 
      display: inline-block; 
      margin-top: 5px; 
      color: #0f5132;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container py-5">

    <!-- üîπ Boutons de navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <a href="/" class="btn btn-outline-secondary me-2">üè† Retour √† l‚Äôaccueil</a>
        <a href="/lesquiz" class="btn btn-outline-primary">üìö Retour aux quiz</a>
      </div>
    </div>

    <!-- üîπ Titre et description -->
    <h2 class="mb-2"><%= quiz.title %></h2>
    <p class="text-muted mb-4"><%= quiz.description %></p>

    <!-- üîπ Formulaire du quiz -->
    <form id="playForm">
      <% quiz.questions.forEach(function(q, qi){ %>
        <div class="card p-3 mb-3">
          <strong>Q<%= qi+1 %>. <%= q.text %></strong>
          <div class="mt-2">
            <% q.choices.forEach(function(c, ci){ %>
              <div class="form-check">
                <% if (q.allowMultiple) { %>
                  <input class="form-check-input" type="checkbox" name="q-<%= qi %>" value="<%= ci %>">
                <% } else { %>
                  <input class="form-check-input" type="radio" name="q-<%= qi %>" value="<%= ci %>">
                <% } %>
                <label class="form-check-label"><%= c.text %></label>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>

      <button type="submit" class="btn btn-primary">Soumettre</button>
    </form>

    <!-- üîπ R√©sultat -->
    <div id="result" class="alert alert-info mt-3 d-none"></div>
  </div>

  <!-- üîπ Script -->
  <script>
    document.getElementById('playForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const div = document.getElementById('result');
      div.classList.add('d-none');

      // R√©initialise les ic√¥nes et r√©ponses pr√©c√©dentes
      document.querySelectorAll('.correct, .incorrect, .good-answer').forEach(el => el.remove());

      // Construction des r√©ponses
      const answers = [];
      <% quiz.questions.forEach(function(q, qi){ %>
        (function(){
          const name = 'q-<%= qi %>';
          const inputs = Array.from(document.querySelectorAll(`[name="${name}"]`));
          if (<%= q.allowMultiple ? 'true' : 'false' %>) {
            const vals = inputs.filter(i => i.checked).map(i => parseInt(i.value));
            answers.push(vals);
          } else {
            const sel = inputs.find(i => i.checked);
            answers.push(sel ? parseInt(sel.value) : -1);
          }
        })();
      <% }) %>

      const token = localStorage.getItem('token');

      try {
        const res = await fetch('/api/quizzes/<%= quiz._id %>/submit', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            ...(token ? { 'Authorization': `Bearer ${token}` } : {})
          },
          body: JSON.stringify({ answers })
        });

        const data = await res.json();

        if (!res.ok) {
          div.classList.remove('alert-info', 'd-none');
          div.classList.add('alert-danger');
          div.textContent = data.error || 'Erreur lors de la soumission du quizz.';
          return;
        }

        // üîπ D√©terminer la moyenne
        const moyenne = data.total / 2;
        const estReussi = data.score >= moyenne;
        const symbole = estReussi ? '‚úÖ' : '‚ùå';

        // üîπ Affiche le score global
        div.classList.remove('d-none', 'alert-danger', 'alert-info');
        div.classList.add(estReussi ? 'alert-success' : 'alert-danger');
        div.innerHTML = `<strong>${symbole} Score : ${data.score} / ${data.total}</strong>`;

        // üîπ Affichage des corrections d√©taill√©es
        if (data.corrections) {
          data.corrections.forEach((corr, qi) => {
            const questionCard = document.querySelectorAll('.card')[qi];
            const questionTitle = questionCard.querySelector('strong');

            if (corr.isCorrect) {
              questionTitle.insertAdjacentHTML('beforeend', ' <span class="correct">‚úîÔ∏è</span>');
            } else {
              questionTitle.insertAdjacentHTML('beforeend', ' <span class="incorrect">‚ùå</span>');

              // üî∏ Ajoute les bonnes r√©ponses
              if (corr.correctAnswers && corr.correctAnswers.length) {
                const html = corr.correctAnswers.map(a => 
                  `<div class="good-answer">‚úÖ ${a}</div>`).join('');
                questionCard.insertAdjacentHTML('beforeend', html);
              }
            }
          });
        }

      } catch (err) {
        div.classList.remove('d-none', 'alert-info');
        div.classList.add('alert-danger');
        div.textContent = 'Erreur r√©seau ou serveur.';
        console.error(err);
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
