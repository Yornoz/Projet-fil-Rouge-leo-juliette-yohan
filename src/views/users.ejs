<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Utilisateurs - QuizApp</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <style>
    body { background: #f8f9fa; }
    .table-users { margin-top: 40px; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mt-5 mb-4 text-center">Liste des utilisateurs</h2>
    <table class="table table-striped table-users" id="usersTable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <!-- Les utilisateurs seront insérés ici via JS -->
      </tbody>
    </table>
    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
  </div>

  <script>
    (async () => {
      const token = localStorage.getItem('token');

      // Si aucun token, on renvoie vers login
      if (!token) {
        alert('Connectez-vous pour accéder à cette page.');
        window.location.href = '/login';
        return;
      }

      try {
        const res = await fetch('/api/users', {
          method: 'GET',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json',
            'Cache-Control': 'no-cache'
          },
          cache: 'no-store'
        });

        // Si le token n’est pas valide ou accès refusé
        if (!res.ok) {
          let message = 'Erreur de chargement';
          try {
            const data = await res.json();
            message = data.error || message;
          } catch {
            // rien, on garde le message générique
          }

          alert(message);
          if (message.includes('Token') || message.includes('Accès')) {
            localStorage.removeItem('token');
            window.location.href = '/login';
          }
          return;
        }

        // Si OK → on affiche la liste
        const users = await res.json();
        const tbody = document.querySelector('#usersTable tbody');
        tbody.innerHTML = '';

        users.forEach(user => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${user._id}</td>
            <td>${user.name}</td>
            <td>${user.email}</td>
          `;
          tbody.appendChild(tr);
        });
      } catch (err) {
        console.error('❌ Erreur JS :', err);
        alert('Erreur de connexion au serveur.');
        window.location.href = '/login';
      }
    })();
  </script>
</body>
</html>
